<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>PL - Dashboard</title>
</head>
<body>
    <header class="site-header">
        <div class="container-head">
                <a class="brand" href="/">
                    <svg class="logo" viewbox="0 0 24 24" aria-hidden="true"></svg>
                    <span>PL.</span>
                </a>

                <nav class="navbar" id="navbar">
                    <% if (user) { %>
                        <!-- User is logged in -->
                        <a class="navbar-link" href="/">HOME</a>
                        <a class="navbar-link" href="/dashboard">FIND TRAINERS</a>
                        <a class="navbar-link" href="/profile">PROFILE</a>
                        <a class="navbar-link" href="/logout">LOGOUT</a>
                    <% } else { %>
                        <!-- User is not logged in -->
                        <a class="navbar-link" href="/">HOME</a>
                        <a class="navbar-link" href="/signup">SIGN UP</a>
                        <a class="btn-primary" href="/login">LOG IN</a>
                    <% } %>
                </nav>
            </div>
    </header>

        <div class="hero">
            <div class="hero-left">
                <h1>Knowledge opens doors</h1>
                <h3>Start exploring new possibilities for your future. Learn from the best</h3>
            </div>
            <div class="hero-right">
                <img src="/img/IMG_3928-removebg-preview.png" alt="">
            </div>
        </div>
    </div>
    <div class="container-body">
        <form>
            <label for="search"></label>
            <div class="input-icon-wrapper">
                <img src="/img/vecteezy_search-icon-search-icon-vector-design-illustration-search_7528225-removebg-preview.png" alt="icon" class="input-icon">
                <input type="text" id="searchBox" name="skill" placeholder="Search a skill">
            </div>
        </form>

        <h1>Learners are viewing</h1>
        <div class="profile-grid" id="results">
            <% if (trainers && trainers.length > 0) { %>
                <% trainers.forEach(trainer => { %>
                    <div class="profile-box" style="cursor: pointer;" data-id="<%= trainer.id %>">
                        <div class="profile-pic"><img src="<%= trainer.profile_picture %>" alt="profile picture"></div>
                        <div class="profile-role"><a href="/trainer/<%= trainer.id %>" style="text-decoration: none;"><%= trainer.skills || 'expert in some field' %></a></div>
                        <div class="profile-rating">
                            <span class="star">&#9733;</span><br>
                            <span class="rating">4.8</span>
                            <span class="rating-num">4k ratings</span>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No trainers available at the moment.</p>
            <% } %>             
        </div>
        
        <h1>Top Trainers</h1>
        <div class="profile-grid">
            <% if (trainers && trainers.length > 0) { %>
                <% trainers.forEach(trainer => { %>
                    <div class="profile-box" style="cursor: pointer;" data-id="<%= trainer.id %>">
                        <div class="profile-pic"><img src="<%= trainer.profile_picture %>" alt="profile picture"></div>
                        <div class="profile-role"><a href="/trainer/<%= trainer.id %>" style="text-decoration: none;"><%= trainer.skills || 'expert in some field' %></a></div>
                        <div class="profile-rating">
                            <span class="star">&#9733;</span>
                            <span class="rating">4.8</span>
                            <span class="rating-num">4k ratings</span>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No trainers available at the moment.</p>
            <% } %>  
        </div>
    </div>
    <footer>
        <div class="main-ft">PL.</div>
        <div class="left1"><p>&copy; 2025 PL, Inc.</p></div>
        <div class="middle"><p>Terms of Service</p></div>
        <div class="right-ft"><p>Privacy Policy</p></div>
    </footer>

    <script>
        document.querySelectorAll('.profile-box').forEach(profile => {
            profile.addEventListener('click', () => {
                const id = profile.getAttribute('data-id');
                window.location.href = `/trainer/${id}`;
            })
        })

        const searchBox = document.getElementById("searchBox");
        const resultsDiv = document.getElementById("results");

        // let allTrainers = [...document.querySelectorAll(".profile-box")];

        // remove duplicates based on data-id
        // allTrainers = allTrainers.filter((trainer, index, self) =>
        // index === self.findIndex(t => t.dataset.id === trainer.dataset.id)
        // )


        searchBox.addEventListener("input", async (e) => {
            const skill = e.target.value.trim();

            // if (!skill) {
            //     console.log(allTrainers)
            //     // If input is empty, show original trainers
            //     resultsDiv.innerHTML = "";
            //     allTrainers.forEach(trainer => resultsDiv.appendChild(trainer));
            //     return;
            // }

            try {
                const res = await fetch(`/api/search?skill=${encodeURIComponent(skill)}`);
                const data = await res.json();

                // Clear current results
                resultsDiv.innerHTML = "";

                if (data.trainers.length === 0) {
                    resultsDiv.innerHTML = '<p class="navbar-link">No trainers found</p>';
                    return;
                }

                // Render matched trainers
                data.trainers.forEach(trainer => {
                    const div = document.createElement("div");
                    div.className = "profile-box";
                    div.setAttribute("data-id", trainer.id);
                    div.innerHTML = `
                        <div class="profile-pic"><img src="${trainer.profile_picture}" alt="profile picture"></div>
                        <div class="profile-role">
                        <a href="/trainer/${trainer.id}" style="text-decoration: none;">
                            ${trainer.skills || 'expert in some field'}
                        </a>
                        </div>
                        <div class="profile-rating">
                        <span class="star">&#9733;</span><br>
                        <span class="rating">4.8</span>
                        <span class="rating-num">4k ratings</span>
                        </div>
                    `;
                    resultsDiv.appendChild(div);
                })

            } catch (err) {
                console.error("Search failed:", err);
            }
        });

    </script>
</body>
</html>